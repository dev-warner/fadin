{
  "name": "fadin",
  "version": "0.0.0-development",
  "description": "",
  "main": "dist/fadin.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'lib/**/*.ts' 'test/**/*.ts'",
    "build": "tsc --module es2015 && rollup -c rollup.config.ts && typedoc --out docs --target es5 --theme minimal --mode file lib",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:debug": "node --inspect node_modules/.bin/jest --watch --runInBand",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "travis-deploy-once": "travis-deploy-once",
    "build:docs": "typedoc --out docs --target es5 --theme minimal --mode file lib"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^11.11.3",
    "coveralls": "^3.0.3",
    "jest": "^24.5.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "rollup": "^1.6.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.20.1",
    "semantic-release": "^15.13.3",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.0.3"
  },
  "precommit": ["build:docs"],
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "lib/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-warner/fadin.git"
  }
}
